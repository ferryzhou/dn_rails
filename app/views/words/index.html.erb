<h1>Listing words</h1>

<table>
  <tr>
    <th>En name</th>
    <th>Title</th>
    <th>Link</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.en_name %></td>
    <td><%= word.title %></td>
    <td><%= word.link %></td>
    <td><%= word.category %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

